@model GeneralStore.MVC.Models.ProductDetail

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InventoryCount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.IsFood)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.IsFood)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.First().Customer.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.First().ItemCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transactions.First().TimeOfPurchase)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemCount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeOfPurchase)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit","Transaction",new { id = item.TransactionId },null) |
                    @Html.ActionLink("Details", "Details","Transaction", new { id = item.TransactionId },null) |
                    @Html.ActionLink("Delete", "Delete","Transaction", new { id = item.TransactionId },null)
                </td>
            </tr>
        }

    </table>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ProductId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
